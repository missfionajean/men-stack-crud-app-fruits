<!-- views/fruits/index.ejs -->

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Fruits Index</title>
	</head>
	<body>
		<h1>All Fruits</h1>
		<ul>
			<!-- iterates through array in local object -->
			<% fruits.forEach(fruit => { %>
			<!-- makes a new list item for each datum -->
			<li><%= fruit.name %></li>
			<% }); %>
		</ul>
		<a href="/fruits/new">Add New Fruit</a>
	</body>
</html>
